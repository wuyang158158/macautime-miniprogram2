<!--pages/views/spell-route-order.wxml-->
<view class="container pb120">

    <view class="day bg-white ml16 mr16 mt16 mb16">
        <view class="ml32 mr32">
            <view class="f32 c-222222 fw6 bd1 h-100">第一天</view>
            <view class="bd1">
                <view class="flex mt32">
                    <view class="relative experience-avatar mr16">
                        <image class="pic-default-new" src="/images/default/bg_img.png" mode="aspectFill"/>
                        <image class="pic-default-new z-index5" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" mode="aspectFill"/>
                    </view>
                    <view class="flex-1">
                        <view class="f30 c-222222">水舞间</view>
                        <view class="f24 c-999999">新濠天地</view>
                        <view class="f24 c-999999">使用期限：10/20-10/30</view>
                    </view>
                </view>
                <view class="mt32 pb32">
                    <view class="bg-F5F5FA c-222222 f28 p20 pb0 b-radius8 ml116">
                        <radio-group class="radio-group" bindchange="radioChange">
                            <radio class="radio pb20" wx:for-items="{{items}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
                                <text class="ml16">{{item.value}}</text>
                            </radio>
                        </radio-group>
                    </view>
                </view>
            </view>
            
            <view class="">
                <view class="flex mt32">
                    <view class="relative experience-avatar mr16">
                        <image class="pic-default-new" src="/images/default/bg_img.png" mode="aspectFill"/>
                            <image class="pic-default-new z-index5" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" mode="aspectFill"/>
                    </view>
                    <view class="flex-1">
                        <view class="f30 c-222222">水舞间</view>
                        <view class="f24 c-999999">新濠天地</view>
                        <view class="f24 c-999999">使用期限：10/20-10/30</view>
                    </view>
                </view>
                <view class="flex mt32">
                    <view class="relative experience-avatar mr16">
                    </view>
                    <view class="bg-F5F5FA c-222222 f28 p20 pb0 b-radius8 mb32">
                        <radio-group class="radio-group" bindchange="radioChange">
                            <radio class="radio pb20" wx:for-items="{{items}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
                                <text class="ml16">{{item.value}}</text>
                            </radio>
                        </radio-group>
                    </view>
                </view>
            </view>
        </view>
    </view>

    <view class="btn bt1 bg-white">
        <view class="pl32 pr32 flex flex-d">
            <view class="w-default c-00A653 flex">
                <text class="f24 mr5">MOP</text>
                <text class="f36">340</text>
            </view>
            <view class="flex-1 flex flex-f">
                <button class="weui-btn w-240 f30" type="primary" bindtap="submitNext">下一步</button>
            </view>
        </view>
    </view>
</view>
