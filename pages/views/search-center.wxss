/* pages/views/search-center.wxss */
page{
    height: auto!important;
    background-color: #fff!important;
}
.mt52{
    margin-top: 52px;
}
.s-tag{
    display: inline-block;
    padding: 15rpx 33rpx;
    background-color: #F5F5F5;
    border-radius:28rpx;
    font-size: 26rpx;
    color: #333;
    margin-right: 10rpx;
}
.flex-wrap{
    flex-wrap: wrap;
}
.associative-words{
    height: 100rpx;
    line-height: 100rpx;
}
.bd1::before {
    background-color: #CCCCCC;
}

.s-menu{
    justify-content: space-between;
    height: 88rpx;
    line-height: 88rpx;
}
.s-menu-item{
    flex: 1;
    text-align: center;
}
.s-menu-item text{
    display: inline-block;
    height: 88rpx;
    color: #666666;
}
.s-menu-item .text-ac{
    height: 84rpx;
    border-bottom: 4rpx solid #00A653;
    color: #222222;
}
.weui-loadmore{
    padding-bottom: 2.5em;
    margin-bottom: 0;
}
.m-h{
    min-height: 100vh;
    margin-top: 2rpx;
}
.kol-avatar{
    position: relative;
    width:120rpx;
    height:120rpx;
    border-radius:50%;
    margin-right: 20rpx;
}
.kol-avatar image{
    border-radius:50%;
}
.kol-avatar-v{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 0;
    bottom: 0;
    z-index: 10;
}
.w-120{
    width: 120rpx;
    height: 56rpx;
    line-height: 56rpx;
    padding: 0;
}
.m-left{
    padding: 8rpx 16rpx;
    border-radius: 8rpx;
}
.f-j{
    justify-content: space-around;
}
.f-j-c{
    justify-content: center;
}
.model{
    width: 100%;
    background:rgba(0,0,0,0.5);
}
.flex-d{
    flex-direction: column;
    position: fixed;
    width: 100%;
    min-height: 100vh;
    z-index: 6;
}
.w-100{
    width: 100%;
}
.items{
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 80rpx;
}