<!--pages/views/all-exp-comment.wxml-->
<view class="container mt16">
    <!-- 体验评论 -->
    <view class="review pb45 pl32 pr32" wx:if="{{expComment.length}}">
        <!-- <view class="review-tag flex f28 c-00A653 fw5">
            <view class="tag-i flex mb16">浪漫美好(25)</view>
            <view class="tag-i flex mb16">性价比高(20)</view>
            <view class="tag-i flex mb16">兑票快速(18)</view>
            <view class="tag-i flex mb16">唱歌好听(16)</view>
            <view class="tag-i-low flex mb16">排队太久(13)</view>
            <view class="tag-i flex mb16">很喜欢(12)</view>
        </view> -->
        <view class="handpick flex" wx:for="{{expComment}}" wx:key="orderId">
            <view class="relative photo">
                <image class="pic-default-new" src="/images/default/avatar.png" mode="aspectFill"/>
                <image class="pic-default-new z-index5" src="{{item.BackgroundPicture || item.headImageUrl}}" mode="aspectFill"/>
            </view>
            <view class="flex-1 c-222222 mb32">
                <view class="user-name f30 l-h30">{{item.title || ''}}</view>
                <view class="user-time f24 l-h30 c-999999">评价时间： {{item.createTime || ''}}</view>
                <view class="user-content f28 l-h40">{{item.content || ''}}</view>
                <!-- 评分 -->
                <view class="flex star">
                    <image src="/images/index/icon_star1@2x.png" wx:for="{{ item.grade }}" wx:key="index"></image>
                    <image src="/images/index/icon_star2@2x.png" wx:for="{{ 5 - item.grade }}" wx:key="index"></image>
                </view>
                <!-- <view class="user-activity f24 c-666666" wx:if="{{item.mealTitle}}">{{item.mealTitle}}</view> -->
                <view class="weui-uploader__bd mt8" wx:if="{{ item.imageUrl }}">
                    <view class="weui-uploader__files" id="uploaderFiles">
                        <view class="weui-uploader__file" bindtap="previewImage" data-url="{{item.imageUrl}}">
                            <view class="relative weui-uploader__img bd">
                                <image class="pic-default-new" src="/images/default/bg_img.png" mode="aspectFill"/>
                                <image class="pic-default-new z-index5" src="{{item.imageUrl}}" mode="aspectFill"/>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <!-- 加载更多 -->
    <view class="weui-loadmore {{loadmoreLine?'weui-loadmore_line':''}}">
        <view wx:if="{{loadmore}}">
        <view class="weui-loading"></view>
        <view class="weui-loadmore__tips">正在加载</view>
        </view>
        <view wx:if="{{loadmoreLine}}" class="weui-loadmore__tips weui-loadmore__tips_in-line bg-EFEFF4">已经到底了！</view>
    </view>
    <gh-empty prop-src="/images/default/no_evaluation.png" prop-text="{{emptytext?emptytext:'还没有任何评价哦~~'}}" prop-mt="100" wx:if="{{noData}}"></gh-empty>
</view>
