<view class="container">
  <view class="information">
    <image src="{{ userInfo.headIco || userInfo.url || '/images/default/avatar.png'}}" class="logo" mode="aspectFit"></image>
    <view class="f36 c-222222 mt30">{{ userInfo.nickName || userInfo.nick  }}</view>
    <view class="f36 c-222222 mt50">{{ _t['邀请你使用澳门时光共度美好时光']}}</view>
  </view>
  <view class="er-code">
