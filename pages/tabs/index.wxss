/* pages/tabs/experience.wxss */
.location{
    height: 50rpx;
}
.location .location-icon{
    width: 28rpx;
    height: 28rpx;
    margin-right: 15rpx;
    margin-top: -4rpx;
}
.h-52{
    height: 52px;
}
.swiper{
    height: 336rpx;
}
.swiper-url{
    width: 100%;
    height: 336rpx;
    border-radius:16rpx;
    overflow: hidden;
}
.menu {
    border-radius: 16rpx;
    padding: 30rpx 39rpx 10rpx;
    display: flex;
    flex-wrap: wrap;
}
.menu .m-item {
    width: 120rpx;
    height: 140rpx;
    margin-right: 55rpx;
    margin-bottom: 20rpx;
    position: relative;
}
.menu .m-item image {
    width: 100%;
    display: block;
    height: 120rpx;
}
.menu .m-item .m-name {
    text-align: center;
    position: absolute;
    width: 100%;
    text-align: center;
    bottom: 0;
}
.menu .m-item:nth-child(4n) {
    margin-right: 0;
}
.nav{
    height: 84rpx;
    line-height: 84rpx;
    display: inline-block;
    font-size: 30rpx;
    font-weight: 500;
}
.nav-ac{
    border-bottom: 4rpx solid #00A653;
    font-size: 36rpx;
    font-weight: 600;
}
.t-c{
    text-align: center;
}


.title{
    width: 100%;
    font-size: 26rpx;
    color: #222222;
    display: flex;
    top:0;
    left:0;
    z-index:100;
}
.scroll-view_H{
    width: 100%;
    white-space: nowrap;
}
.scroll-view-item{
    height: 100%;
}
.scroll-view-item_H{
    display: inline-block;
    width: auto;
    height: 56rpx;
    line-height: 56rpx;
    padding: 0 35rpx;
    text-align: center;
    position: relative;
    border-radius: 28rpx;
    margin-left: 16rpx;
}
.demo-text-1{
    color: #ffffff;
    font-weight: 500;
    background: #00A653;
}
.item-bd{
    position: absolute;
    width: 100%;
    height: 4rpx;
    bottom: 0;
    background: #00A653;
    display: block;
    left: 0%;
}
.demo-text-1{
    font-weight: normal;
}
.more{
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    border: 2rpx solid #00A653;
    text-align: center;
    border-radius: 8rpx;
    margin-top: 40rpx;
}
.w-custom{
    width: 100rpx;
}
.pic-default{
    height: 100%;
}

