/* components/hmList/hmList.wxss */
/* 精选商家 */
@import '../../app.wxss';
.hm-list{
    width: 718rpx;
    border-radius:16rpx;
    overflow: hidden;
}
.pic-default-new{
    border-radius: 16rpx 16rpx 0 0;
}
.hm-top{
    height: 336rpx;
}
.hm-bottom{
    padding: 20rpx 20rpx 32rpx;
}
.none {
  display: none;
}
video {
  width: 100%;
}
.block {
  display: block;
}
.flex-c{
    flex-wrap: wrap;
    justify-content: space-between;
}
.merchant-discount{
    width: 80rpx;
    height: 60rpx;
    position: relative;
    left: 0;
    top: 0;
    z-index: 10;
  }
  .merchant-discount-tag{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
  }
  .merchant-discount-text{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 5rpx;
    top: 3rpx;
    z-index: 5;
  }
  .tag{
    padding: 0 10rpx;
  }
  .bd1{
    border:1rpx solid rgba(230, 230, 230, 1);
  }
  .bd1::before{
    content: none;
  }