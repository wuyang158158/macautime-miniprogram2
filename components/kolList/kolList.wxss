/* components/kolList.wxss */
@import '../../app.wxss';
/* kol信息 */
.kol-content{
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .kol-list{
    width: 351rpx;
    height: 624rpx;
    border-radius:16rpx;
    overflow: hidden;
    background: #fff;
    margin-bottom: 16rpx;
  }
  .kol-list .relative{
    height: 468rpx;
  }
  .pic-default{
    position: absolute;
    width: 100%;
    height: 468rpx;
    left: 0;
    top: 0; 
    z-index: 2; 
  }
  .kol-slide-image{
    position: absolute;
    width: 100%;
    height: 468rpx;
    left: 0;
    top: 0; 
    z-index: 5; 
  }
  .kol-msg{
    margin: 10rpx 20rpx;
  }
  .icon-vip{
    width: 24rpx;
    height: 24rpx;
    margin-left: 8rpx;
  }
  .w-86{
    min-width: 86rpx;
    height: 42rpx;
    line-height: 42rpx;
    padding: 0 10rpx;
  }